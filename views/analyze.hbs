
<!-- Modal -->
<div class="modal fade" id="upfile_popup" tabindex="-1" role="dialog" aria-labelledby="upfile_popup_Label" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="indicator"></div>
    <div class="modal-header">
        <h5 class="modal-title" id="upfile_popup_Label">Add New Dataset</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    
    <div class="modal-body">
        <div class="media mb-3">
            <form id="fileUpload" accept-charset="UTF-8" method="POST" enctype="multipart/form-data" target="_blank">
                <div class="form-group">
                <label for="InputName">Dataset Name</label>
                <input type="text" name="datasetname" class="form-control autosize" id="InputName" placeholder="Enter the name of the dataset" required>
                </div>
                <div class="form-group">
                <label for="InputTissue" required>Tissue</label>
                <input type="text" name="tissue" class="form-control" id="InputTissue" placeholder="Enter tissue of the dataset">
                </div>
                <div class="form-group">
                <label for="InputYear">Year of Publication</label>
                <input type="number" name="year" class="form-control" id="InputYear" placeholder="Enter year of publication">
                </div>
                <hr>
                <div class="form-group mt-3">
                <label class="mr-2">Upload your dataset file:</label>
                <input type="file" name="file" accept=".tsv" required id="attached_file">
                </div>
                <div class="form-group mt-3">
                <label class="mr-2">Upload your metadata file: (optional)</label>
                <input type="file" name="metafile" accept=".tsv" id="metafile">
                </div>
                <hr>
                <input type="checkbox" id="private" name="private">
                <label for="private">Private</label><br>
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal" style="float: right;">Close</button>
                <button id="btn_submit" type="submit" class="btn btn-info" style="float: right;">Upload</span>
            </form>      
        </div>
    </div>
    </div>
</div>
</div>
<div id="clients" class="the-clients">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="section-heading">
                    <h4><em>{{TASK}}</em></h4>
                    <img src="assets/images/heading-line-dec.png" alt="">
                    <p>{{desc}}</p>
                </div>
            </div>
            <div class="col-lg-12">
                {{#unless can_use}}
                <div class="container-title" >
                    <div class="title">
                        <div class="title">
                            <h5 class="heading">This computational method is coming soon.</h5>
                        </div>
                    </div>
                </div>
                {{else}}
                <div class="container-title" >
                    <div class="title">
                        <h5 class="heading">Select dataset:</h5>
                        <div style="display: flex;">
                            <button type="button" class="btn btn-info modalTrigger" data-toggle="modal" data-target="#upfile_popup">New Dataset</button>
                            <button id="exec_btn" type="button" class="btn btn-success" disabled>{{action}}</button>
                        </div>
                        
                    </div>
                </div>
                <div class="naccs">
                    <div class="grid">
                        <div class="row">
                            <div class="col-lg-12 align-self-center">
                                <div class="menu" id="ds_list">
                                    {{#if exist_data}}
                                        {{#each data}}
                                            {{#if this.filename}}
                                                <div>
                                            {{else}}
                                                <div style="pointer-events: none; ">
                                            {{/if}}
                                                <div class="thumb">
                                                    <div class="row">
                                                    <div class="col-lg-4 col-sm-4 col-12">
                                                        {{#if this.name}}
                                                            <h4 name="{{this.filename}}">{{this.name}}</h4>
                                                        {{else}}
                                                            <h4>No name</h4>
                                                        {{/if}}
                                                        <span class="status">{{this.status}}</span>
                                                    </div>
                                                    <div class="col-lg-4 col-sm-4 d-none d-sm-block">
                                                        {{#if this.tissue}}
                                                            <span class="category">{{this.tissue}}</span>
                                                        {{else}}
                                                            <span class="category">Undefined</span>
                                                        {{/if}}
                                                        
                                                    </div>
                                                    <div class="col-lg-4 col-sm-4 col-12">
                                                        <h4>{{{this.publish_year}}}</h4>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="seperate-line"></div>
                                        {{/each}}
                                    {{/if}}
                                </div>
                            </div>          
                        </div>
                    </div>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>
</div>